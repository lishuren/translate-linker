
# LLM Settings
DEFAULT_LLM_MODEL=openai  # Options: openai, anthropic, google, groq, cohere, huggingface, deepseek, siliconflow
LLM_TEMPERATURE=0.1

# User-specific configuration (set to false to allow user model selection)
ALLOW_USER_MODEL_SELECTION=true

# Database Configuration
USE_DATABASE=true
DATABASE_URL=sqlite:///translations.db

# Global Configuration
GLOBAL_CONFIG_FILE=./config/global_config.json

# TMX (Translation Memory) Settings
TMX_DIRECTORY=./tmx_files
RAG_ENABLED=true

# OpenAI (ChatGPT) Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o  # Options: gpt-3.5-turbo, gpt-4o, gpt-4o-mini, etc.

# Anthropic (Claude) Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229  # Options: claude-3-opus, claude-3-sonnet, etc.

# Google (Vertex AI/Grok) Settings
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL_NAME=gemini-pro  # Options: gemini-pro, gemini-ultra, grok-1, etc.

# Groq Settings
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=llama-3-70b-8192  # Options: llama-3-70b-8192, mixtral-8x7b, etc.

# Cohere Settings
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL_NAME=command  # Options: command, command-light, etc.

# Hugging Face Settings
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.2

# DeepSeek Settings
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL_NAME=deepseek-chat
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# SiliconFlow Settings
SILICONFLOW_API_KEY=your_siliconflow_api_key_here
SILICONFLOW_MODEL_NAME=siliconflow-1
SILICONFLOW_API_BASE=https://cloud.siliconflow.cn/api/v1

# Web Translation Service Settings
WEB_TRANSLATION_SERVICE=google  # Options: google, microsoft, deepl, none
WEB_TRANSLATION_API_KEY=your_web_translation_api_key_here
WEB_TRANSLATION_API_REGION=global  # For services that require region specification

# Google Translate Settings
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Microsoft Translator Settings
MICROSOFT_TRANSLATOR_API_KEY=your_microsoft_translator_api_key_here
MICROSOFT_TRANSLATOR_REGION=global

# DeepL Settings
DEEPL_API_KEY=your_deepl_api_key_here

# Third-party Translation API Key
TRANSLATION_API_KEY=your_translation_api_key_here

# Vector Store Settings
VECTOR_STORE_TYPE=faiss  # Options: faiss, redis, pinecone
VECTOR_STORE_PATH=./vector_stores

# Server Settings
PORT=5000
HOST=0.0.0.0
DEBUG=True

# Document Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=20

# User-specific Settings
USER_SETTINGS_ENABLED=true  # Set to true to enable user-specific settings
USER_SETTINGS_FILE=./user_settings.json  # Path to user settings file
